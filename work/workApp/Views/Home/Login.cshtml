@{
    ViewData["Title"] = "Login";
}
<form asp-action="CheckRole">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                &nbsp;
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-9">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-9 text-center">
                                <h2>Log in</h2>
                            </div>
                        </div>
                        <center>
                        <div class="row">
                            <div class="col-md-3 text-right">
                                User Name:
                            </div>
                            <div class="col-md-6">
                                     @Html.TextBox("name")
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-3 text-right">
                                Password:
                            </div>
                            <div class="col-md-6">
                                    @Html.Password("pwd")
                            </div>
                            </center>
                        </div>
                        <br />
                        <div class="row">
                            <center>
                            <div class="col-md-3 text-right">
                                &nbsp;
                            </div>
                            <div class="col-md-6">
                                <input type="submit" class="btn" value="Login" id="btnLogin" />
                            </div>
                            </center>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

