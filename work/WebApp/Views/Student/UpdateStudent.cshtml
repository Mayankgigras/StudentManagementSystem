                <label asp-for="JoiningYear" class="control-label"></label>
                <input asp-for="JoiningYear" class="form-control" />
                <span asp-validation-for="JoiningYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentFname" class="control-label"></label>
                <input asp-for="StudentFname" class="form-control" />
                <span asp-validation-for="StudentFname" class="text-danger"></span>
            </div>
            <div class="form-group">
